{
	admin off
	persist_config off
	auto_https off
	log {
		format json
	}
	servers {
		trusted_proxies static private_ranges
	}
}

:{$PORT} {
	log {
		format json
	}

	reverse_proxy https://{HOST_PORT} {
		header_up Host {upstream_hostport}
        transport http {
            tls
            tls_insecure_skip_verify
        }
	}
}